    <script type="text/javascript">   
       function changeColor(category) {
           // ëª¨ë“  ë§í¬ì˜ ìƒ‰ìƒì„ ì´ˆê¸°í™”
           resetColors();
   
           // í´ë¦­ëœ ë§í¬ì˜ ìƒ‰ìƒì„ ë³€ê²½
			document.getElementById(category).style.color = '#00315c';
           document.getElementById(category).style.borderBottom = '5px solid';
         }
   
         function resetColors() {
           // ëª¨ë“  ë§í¬ì˜ ìƒ‰ìƒì„ ì›ë˜ëŒ€ë¡œ ë˜ëŒë¦½ë‹ˆë‹¤.
           const categories = ['tag-1', 'tag-2', 'tag-3', 'tag-4', 'tag-5', 'tag-6'];
           categories.forEach(function (category) {
             document.getElementById(category).style.color = '';
             document.getElementById(category).style.border = 'none';
           });
         }
         
         $(document).ready(function() {
               $('#portfolioModal1').on('show.bs.modal', function(event) {
                   var button = $(event.relatedTarget); // í´ë¦­í•œ a íƒœê·¸ì˜ ì •ë³´ë¥¼ ê°€ì ¸ì˜´
                   var idx = button.data('idx'); // data-idx ì†ì„± ê°’ì„ ê°€ì ¸ì˜´
                   

                   $.ajax({
                       url: "${cpath}/board/getmodal",
                       data: {"idx": idx},
                       type: "get",
                       dataType: "json",
                       success: function(data) {
                           makeBoard(data, idx); // ì—¬ê¸°ì„œ makeBoard í˜¸ì¶œ
                       },
                       error: function(e) {
                           console.log(e);
                       }
                   });
               });
           });

         function makeBoard(data, clickedIdx) {
               var bookContent = "<div id='book'>";
               bookContent += "<div class='page'></div>"; // ì²« í˜ì´ì§€ ì¶”ê°€
				$('#goblog').attr("href", "${cpath}/blog/"+data[0].user_id);
               var startingPage = 1; // ì‹œì‘ í˜ì´ì§€ ì´ˆê¸°í™”
               var startingData;
               
               console.log(clickedIdx);
               data.forEach(function (item, index) {
                   // ê° í˜ì´ì§€ì— í•´ë‹¹í•˜ëŠ” ì´ë¯¸ì§€ ì¶”ê°€
                   bookContent += `
                       <div class='page' style='background-image: url(\${item.bd_content}); background-size: 200% 100%; background-position: left;'></div>
                       <div class='page' style='background-image: url(\${item.bd_content}); background-size: 200% 100%; background-position: right;'></div>
                   `;
                   if (item.bd_idx === clickedIdx) {
                       startingPage = index * 2 + 2;
                       //console.log(index, startingPage);// í´ë¦­í•œ ê²Œì‹œê¸€ì˜ í˜ì´ì§€ ë²ˆí˜¸ ê³„ì‚°
                       startingData = item;
                   }
               });
               bookContent += "</div>";

               $('.detail_story').html(bookContent);

               // turn.js ì´ˆê¸°í™” ë° í˜ì´ì§€ ì„¤ì •
               $('#book').turn({
                   width: 800,
                   height: 600,
                   autoCenter: true,
                   page: startingPage // í´ë¦­í•œ ê²Œì‹œê¸€ì˜ í˜ì´ì§€ë¡œ ì‹œì‘
               });

               // ì‹œì‘ í˜ì´ì§€ì— í•´ë‹¹í•˜ëŠ” ë°ì´í„°ë¡œ ì œëª©, ë‹‰ë„¤ì„, ë‹¤ì´ì–´ë¦¬ ì´ë¦„ ì—…ë°ì´íŠ¸
               if (startingData) {
                   $('#stTitle').text(startingData.bd_title);
                   $('#stNick').text(startingData.user_nick);
                   $('#stDiary').text(startingData.bd_diary);
               }

               // í˜ì´ì§€ê°€ ë„˜ì–´ê°ˆ ë•Œë§ˆë‹¤ ì—…ë°ì´íŠ¸
               $('#book').on("turning", function(event, page, view) {
                   if (page === 1) {
                          event.preventDefault(); // ì²« í˜ì´ì§€ë¡œ ì´ë™ ì‹œ ì´ë™ì„ ì·¨ì†Œ
                      } else {
                          // í˜ì´ì§€ê°€ ë„˜ì–´ê°ˆ ë•Œë§ˆë‹¤ ì—…ë°ì´íŠ¸
                          var currentPageData = data[Math.floor(page / 2) - 1];
                          $('#stTitle').text(currentPageData.bd_title);
                          $('#stNick').text(currentPageData.user_nick);
                          $('#stDiary').text(currentPageData.bd_diary);
                      }
                   
                   
               });
           }
         $(window).resize(function() {
             var width = $('#book').parent().width();
             var height = width * 0.75; // ê°€ë¡œì„¸ë¡œ ë¹„ìœ¨ ìœ ì§€
             $('#book').turn('size', width, height);
         });
         
        
    </script>


    
    
</html>

