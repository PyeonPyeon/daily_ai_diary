    <script type="text/javascript">
    $(document).ready(function(){
      
      var pageFrm = $("#story");
      $(".paginate_button a").on("click", function(e){
         //e í˜„ì¬ í´ë¦­í•œ aíƒœê·¸ ìš”ì†Œ ìì²´
         e.preventDefault(); // aíƒœê·¸ì˜ hrefì†ì„± ì‘ë™ë§‰ê¸°
         var page = $(this).attr("href"); //í´ë¦­í•œ aíƒœê·¸ì˜ hrefì˜ ê°’
         pageFrm.find("#page").val(page);
         pageFrm.submit();
      });
    
    }) 
    
 $(document).ready(function() {
    getBoard();
    
    $(window).scroll(function() {
        if ($(window).scrollTop() + $(window).height() > $(document).height() - 50) {
            getBoard();
        }
    });
});

var isAllDataLoaded = false;
var isLoading = false; // ìš”ì²­ ìƒíƒœë¥¼ ì¶”ì í•˜ëŠ” í”Œë˜ê·¸
var page = 1;

function getBoard() {
    if (isAllDataLoaded || isLoading) {
        return; // ë” ì´ìƒ ë¡œë“œí•  ë°ì´í„°ê°€ ì—†ê±°ë‚˜, ì´ë¯¸ ìš”ì²­ ì¤‘ì´ë©´ í•¨ìˆ˜ë¥¼ ì¢…ë£Œí•©ë‹ˆë‹¤.
    }

    isLoading = true; // ìš”ì²­ ì‹œì‘ì„ í‘œì‹œ
    var id = "${mvo.user_id}";

    $.ajax({
        url: "board/followboard",
        data: {
            "id": id,
            "page": page
        },
        type: "get",
        dataType: "json",
        success: function(data) {
            if (data.length === 0) {
                isAllDataLoaded = true;
                isLoading = false; // ë°ì´í„°ê°€ ì—†ìœ¼ë¯€ë¡œ ìš”ì²­ ìƒíƒœë¥¼ ì¢…ë£Œ
                return;
            }

            makeView(data);
            page++;
            isLoading = false; // ìš”ì²­ ì™„ë£Œ
        },
        error: function() {
            alert("error");
            isLoading = false; // ì—ëŸ¬ ë°œìƒ ì‹œì—ë„ ìš”ì²­ ìƒíƒœë¥¼ ì¢…ë£Œ
        }
    });
}

function makeView(data) {
    var listHtml = `<div class="row row-cols-1 row-cols-md-3 g-4">`;
    data.forEach(function(obj) {
        listHtml += `
            <div class="col">
            <div class="card">
                  <a href="${cpath}/blog/\${obj.user_id}" class=""><img src="\${obj.bd_content}" class="card-img-top" alt="..."></a>
                     <div class="card-body">
                       <a href="${cpath}/blog/\${obj.user_id}" class="cardTitle"><h5 class="card-title">\${obj.bd_title}</h5> <p>\${obj.user_nick}</p></a>
                       <img class="heartImg" src="${awsPath}/images/heart.png"><span class="card-text">\${obj.bd_views}</span>
                     </div>
                </div>
            </div>   
        `;
    });
    listHtml += `</div>`;

    $(".follow-board").append(listHtml);
}
const scrollToTopButton = document.getElementById('scrollToTopBtn');

// ìŠ¤í¬ë¡¤ ìœ„ì¹˜ê°€ ì¼ì • ê°’ ì´ìƒì¼ ë•Œ ë²„íŠ¼ì„ í‘œì‹œ
window.addEventListener('scroll', () => {
  if (window.scrollY > 200) { // ìŠ¤í¬ë¡¤ ìœ„ì¹˜ ì¡°ê±´ì„ ì›í•˜ëŠ” ìœ„ì¹˜ë¡œ ì¡°ì •
    scrollToTopButton.style.display = 'block';
  } else {
    scrollToTopButton.style.display = 'none';
  }
});

// ë²„íŠ¼ í´ë¦­ ì‹œ í˜ì´ì§€ ë§¨ ìœ„ë¡œ ìŠ¤í¬ë¡¤
scrollToTopButton.addEventListener('click', () => {
  window.scrollTo({
    top: 0,
    behavior: 'smooth' // ë¶€ë“œëŸ¬ìš´ ìŠ¤í¬ë¡¤ íš¨ê³¼
  });
});
    
    </script>
    
